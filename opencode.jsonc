{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "./.opencode/AGENTS.md",
    "./.opencode/instructions/preflight.md",
    "./.opencode/instructions/project-constraints.md"
  ],
  "permission": {
    "external_directory": {
      "~/pessoal/**": "allow",
      "~/festalab/**": "allow"
    },
    "edit": {
      "./**": "allow",
      "~/pessoal/**": "deny",
      "~/festalab/**": "deny"
    },
    "bash": {
      "cat *": "allow",
      "git commit": "ask",
      "git push": "deny",
      "grep *": "allow",
      "ls *": "allow",
      "rm *": "ask",
      "ssh *": "ask",
      "sudo *": "ask"
     }
   },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    }
  }
}
